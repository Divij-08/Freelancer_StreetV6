<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20sp"
    android:background="@drawable/match_item_style">
    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/MatchImage"
        android:background="@drawable/match_item_image_style" />
    <LinearLayout
        android:paddingStart="20sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match's Name"
        android:textSize="20sp"
        android:textColor="#000"
        android:id="@+id/MatchName">

    </TextView>
    <TextView
        android:id="@+id/Matchid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Match's ID">

    </TextView>
    </LinearLayout>
</LinearLayout>